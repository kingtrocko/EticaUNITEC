/*Menu Container*/
.white
{
float:right;
clear: both;
height: 62px;
/*margin: 0 20px 25px auto;*/
padding-top: 15px;
}

body, ul, li {  
    font-size:14px;  
    font-family:Arial, Helvetica, sans-serif;  
    line-height:21px;  
    text-align:left;  
}  
      
/* Navigation Bar */  
       
#menu   
{
    position:relative;
    list-style:none;  
    width: auto;  
    height:43px;  
    padding:0;  
    float:right;
    clear: both;
    height: 49px;
    margin: 0;
        
    /* Rounded Corners */  
      
    -moz-border-radius: 10px;  
    -webkit-border-radius: 10px;  
    border-radius: 10px;  
       
}  
      
#menu li{  
    float:left;  
    position:relative;  
    padding: 4px 9px 4px 9px;  
    margin-right:0px;  
    margin-top:0px;  
    border:none;  
}  
      
#menu li.bgfilled:hover
{
    position: relative;
    padding: 4px 9px 4px 9px;
    background: #2C436C;
    z-index: 10;
}  

#menu li.sbbr:hover
{
    /* Rounded corners and shadow */  
      
    box-shadow:0px -1px 1px rgba(0, 0, 0, 0.55);
    -moz-border-radius: 4px 4px 0px 0px;  
    -webkit-border-radius: 4px 4px 0px 0px;  
    border-radius: 4px 4px 0px 0px;  
}
      
#menu li a {  
    font-family: "Myriad Pro" ,sans-serif; 
    position: relative; 
    font-size:14px;  
    color: #C1141C; 
    display:block;  
    outline:0;  
    text-decoration:none;  
    height:35px;
}
    
#menu li a strong
{
display:block;
font-weight: normal;
font-size: 16px;
}

#menu li a span
{
display:block;
font-size: 10px;
}
    
#menu li:hover a
{
    color: #FFFFFF; /* text-shadow: 1px 1px 1px #FFFFFF;*/
}  
#menu li .drop
{
background-position: right center;
padding-right: 21px;
background-image: url('images/arrow-b.png');
background-repeat: no-repeat;
}  
#menu li:hover .drop
{
background-position: right center;
padding-right: 21px;
background-image: url('../Resources/arrow-w.png');
background-repeat: no-repeat;   
}  
      
/* Drop Down */  
      
.dropdown
{  
    background-image: url('../Resources/bg15x15.png');
    background-repeat: repeat;
    box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.55);
    border-radius: 0px 0px 4px 4px;
    position: absolute;
    padding:10px 15px 10px 15px;
    margin-left: 0px;
    margin-top: 4px; /*margin:4px auto;  */
    float: left;
    position: absolute;
    left: -999em; /* Hides the drop down */
    text-align: left;
    z-index:-10;
}  
    
.dropdown
{
    width: 160px;
}  
        
#menu li:hover .dropdown
{  
    left:0px;  
    top:auto;  
}  
      
/* Columns */  
      
.col_1,  
.col_2,  
.col_3,  
.col_4,  
.col_5   
{
    display:inline;  
    float: left;  
    position: relative;  
    margin-left: 5px;  
    margin-right: 5px;  
}  
.col_1 {width:130px;}  
.col_2 {width:270px;}  
.col_3 {width:410px;}  
.col_4 {width:550px;}  
.col_5 {width:690px;}  
      
/* Right alignment */  
      
#menu .menu_right {
	float:right;
	margin-right:0px;
}


#menu li .align_right {
	/* Rounded Corners */
	-moz-border-radius: 0px 0px 5px 5px;
    -webkit-border-radius: 0px 0px 5px 5px;
    border-radius: 0px 0px 5px 5px;
    width: 150px;
}

#menu li:hover .align_right {
	left:auto;
	right:0px;
	top:auto;
}

#menu li:hover div.align_right a
{
    background: url('../Resources/arrow_left.png') no-repeat 0px 15px;
    background-position: right center;   
    padding: 4px 20px 4px 20px; 
    text-align: right;
    width:110px;
}

#menu li:hover div.align_right a:hover
{
    background: url('../Resources/arrow_left_h.png') no-repeat 0px 15px;
    background-position: right center;   

}
      
/* Drop Down Content Stylings */  
      
#menu p, #menu h2, #menu h3, #menu ul li {  
    font-family:Arial, Helvetica, sans-serif;  
    line-height:21px;  
    font-size:12px;  
    text-align:left;  
    text-shadow: 0px 0px 3px rgba(150, 150, 150, 1); 
}  
#menu h2 {  
    font-size:21px;  
    font-weight:400;  
    letter-spacing:-1px;  
    margin:7px 0 14px 0;  
    padding-bottom:14px;  
    border-bottom:1px solid #666666;  
}  
#menu h3 {  
    font-size:14px;  
    margin:7px 0 14px 0;  
    padding-bottom:7px;  
    border-bottom:1px solid #888888;  
}  
#menu p {  
    line-height:18px;  
    margin:0 0 10px 0;  
}  
      
#menu li:hover div a
{
    height: 23px;
    padding: 4px 5px 4px 20px;
    background: url('../Resources/arrow_right.png') no-repeat 5px 8px;
    background-position: left center;
    font-size: 12px;
    color: #FFFFFF;
    width: 135px;
}  
#menu li:hover div a:hover
{
    background: url('../Resources/arrow_right_h.png') no-repeat 5px 8px;
    background-position: left center;
    color: #FF0000;
}  
.strong {  
    font-weight:bold;  
}  
.italic {  
    font-style:italic;  
}  

.warning
{
	-moz-animation-name: darkness;
	-moz-animation-timing-function: ease-in;
	-moz-animation-iteration-count: 2;
	-moz-animation-direction: alternate;
	-moz-animation-duration: 600ms;
	
	/* Webkit */
	-webkit-animation-name: darkness;
	-webkit-animation-timing-function: ease-in;
	-webkit-animation-iteration-count: 2;
	-webkit-animation-direction: alternate;
	-webkit-animation-duration: 600ms;
}

.imgshadow {  
    background:#FFFFFF;  
    padding:4px;  
    border:1px solid #777777;  
    margin-top:5px;  
    -moz-box-shadow:0px 0px 5px #666666;  
    -webkit-box-shadow:0px 0px 5px #666666;  
    box-shadow:0px 0px 5px #666666;  
}  
.img_left { /* Image sticks to the left */  
    width:auto;  
    float:left;  
    margin:5px 15px 5px 5px;  
}  
#menu li .black_box {  
    background-color:#333333;  
    color: #eeeeee;  
    text-shadow: 0px 0px 3px rgba(150, 150, 150, 1);
    padding:4px 6px 4px 6px;  
      
    /* Rounded Corners */  
    -moz-border-radius: 5px;  
    -webkit-border-radius: 5px;  
    border-radius: 5px;  
      
    /* Shadow */  
    -webkit-box-shadow:inset 0 0 3px #000000;  
    -moz-box-shadow:inset 0 0 3px #000000;  
    box-shadow:inset 0 0 3px #000000;  
}  
#menu li ul {  
    list-style:none;  
    padding:0;  
    margin:0 0 0px 0;  
}  
#menu li ul li
{
    
font-size: 12px;
position: relative;
/*text-shadow: 0px 0px 3px rgba(150, 150, 150, 1);*/
padding: 0;
margin: 0;
float: none;
width: 130px;
}  
#menu li ul li:hover   
{

    background:none;  
    border:none;  
    padding:0;  
    margin:0;  
}  
#menu li .greybox li {  
    background:#F4F4F4;  
    border:1px solid #bbbbbb;  
    margin:0px 0px 4px 0px;  
    padding:4px 6px 4px 6px;  
    width:116px;  
      
    /* Rounded Corners */  
    -moz-border-radius: 5px;  
    -webkit-border-radius: 5px;  
    border-radius: 5px;  
}  
#menu li .greybox li:hover {  
    background:#ffffff;  
    border:1px solid #aaaaaa;  
    padding:4px 6px 4px 6px;  
    margin:0px 0px 4px 0px;  
}  
    
/*sep*/
#menu li.Decoration
{
background-image: url('../Resources/sep.png'); 
background-repeat: no-repeat; 
background-position: 0px center;
}

@-moz-keyframes darkness {
    0% { 
        text-shadow: 0px 0px 0px rgba(255, 0, 0, 0.5);
    }
    
    100% {
		text-shadow: 0px 0px 6px rgba(255, 0, 0, 0.5);
    }
}

@-webkit-keyframes darkness {
    0% { 
        text-shadow: 0px 0px 0px rgba(255, 0, 0, 0.5);
    }
    
    100% {
		text-shadow: 0px 0px 6px rgba(255, 0, 0, 0.5);
    }
}