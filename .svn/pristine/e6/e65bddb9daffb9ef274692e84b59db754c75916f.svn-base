body, ul, li {
  font-family:Arial, Helvetica, sans-serif;
  font-size:14px;
  line-height:20px;
  text-align:left;
}

#menu li a {
  color:#C1141C;
  display:block;
  font-family:Arial, Helvetica, sans-serif;
  height:35px;
  outline:0;
  position:relative;
  text-decoration:none;
}

#menu li a strong {
  display:block;
  font-size:15px;
  font-weight:normal;
}

#menu li:hover div a {
    background: url("../Resources/arrow_right.png") no-repeat scroll left center transparent;
    color: #FFFFFF;
    font-size: 11px;
    height: 23px;
    padding: 4px 5px 4px 20px;
    width: 135px;
}